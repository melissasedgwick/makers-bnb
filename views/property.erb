<html>
<head>
  <title>Makers BnB by Team LAMP</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
  <link rel="icon" type="image/png" href="https://makers.tech/wp-content/themes/wp-makers-2018/favicon.ico" />
  <style>
    .right {
      float: right;
    }

    .property-list {
      text-align: center;
    }

    .properties {
      margin-top: 20px;
      margin-bottom: 20px;
      margin-left: 200px;
      margin-right: 200px;
      border: 2px dotted white;
    }

    .property-name {
      font-size: 40px;
    }

    .property-price {
      font-size: 20px;
    }

    body {
      background-image: url("../../image.png");
      background-size: cover;
    }

    .button {
      width: 100px;
      height: 25px;
      background-color: white;
      color: blue;
      margin: 8px 0;
      border: none;
      border-radius: 4px;
    }

    .header-button {
      width: 200px;
      height: 50px;
      background-color: white;
      color: blue;
      margin: 8px 0;
      border: none;
      border-radius: 4px;
      font-size: 25px;
    }

    .row {
      padding: 50px;
    }

    h1 {
      font-size: 65px;
    }
  </style>
</head>
<body>
  <h1><%= @property.name %></h1>
  <%= @property.description %><br />
  Â£<%= @property.ppn %> per night.

  <% if @availability %>
    <h2>Dates available:</h2>
    <% @availability.each do |date| %>
      <%= date %>
      <% if @user %>
      <form action='/request/<%= @property.id %>/<%= date %>' method="post">
        <input type="submit" class="button" value="Request Booking">
      </form>
      <% end %>
    <% end %>
  <% end %>

</body>
</html>
