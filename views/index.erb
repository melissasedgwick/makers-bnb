<html>
<head>
  <title>Makers BnB by Team LAMP</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
  <link rel="icon" type="image/png" href="https://makers.tech/wp-content/themes/wp-makers-2018/favicon.ico" />
  <style>
    .right {
      float: right;
    }

    .property-list {
      text-align: center;
    }

    .properties {
      margin-top: 20px;
      margin-bottom: 20px;
      margin-left: 200px;
      margin-right: 200px;
      border: 2px dotted white;
    }

    .property-name {
      font-size: 40px;
    }

    .property-price {
      font-size: 20px;
    }

    body {
      background-image: url("image.png");
      background-size: cover;
    }

    .button {
      width: 100px;
      height: 25px;
      background-color: white;
      color: blue;
      margin: 8px 0;
      border: none;
      border-radius: 4px;
    }

    .header-button {
      width: 200px;
      height: 50px;
      background-color: white;
      color: blue;
      margin: 8px 0;
      border: none;
      border-radius: 4px;
      font-size: 25px;
    }

    .row {
      padding: 50px;
    }

    h1 {
      font-size: 65px;
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="row">
      <div class="col-8">
        <h1>Welcome to MakersBnB<%= ", " + @user.name if @user %>!</h1>
      </div>
      <div class="col-4 right">
        <div id="account controls">
          <% if !@user %>
          <form method="get" action="/register">
            <input class="header-button" type="submit" value="Register" id="register" name="register">
          </form>
          <form method="get" action="/login">
            <input class="header-button" type="submit" value="Login" id="login" name="login">
          </form>
          <% else %>
          <form method="post" action="/logout">
            <input class="header-button" type="submit" value="Logout" id="logout" name="logout">
          </form>
            <% end %>
          <%= flash[:notice] %>

          <% if @user %>
          <form method="get" action="/account">
            <input class="header-button" type="submit" id="account_page" value="Account">
          </form>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="property-list table">
    <% @properties.each do |property| %>
    <div class="properties">
    <div class="property-name">
      <%= property.name %>
    </div>
    <div class="property-price">
      Â£<%= property.ppn %> per night.
    </div>
    <form action="/property/view/<%= property.id %>" method="get">
      <input type="submit" class="button" id="view_<%= property.id %>" value="View More">
    </form>
    </div>
    <% end %>
  </div>

</body>
</html>
