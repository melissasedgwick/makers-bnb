<html>
<head>
  <title>Makers BnB by Team LAMP</title>
</head>
<body>
  <h1>Welcome to MakersBnB, <%= @user.name if @user %>!</h1>
  <div id="account controls">
    <form method="get" action="/register">
      <input type="submit" value="register" id="register" name="register">Register
    </form>
    <form method="get" action="/login">
      <input type="submit" value="login" id="login" name="login">Login
    </form>
    <form method="post" action="/logout">
      <input type="submit" value="logout" id="logout" name="logout">Login
    </form>
    <%= flash[:notice] %>

    <% if @user %>
    <form method="get" action="/add-property">
      <input type="submit" value="Add property">Add Property
    </form>
    <% end %>
  </div>

  <div>
    <% @properties.each do |property| %>
    <%= property.name %>
    Â£<%= property.ppn %> per night.
    <br>
    <form action="/property/view/<%= property.id %>" method="post">
      <input type="submit" id="view_<%= property.id %>" value="View More">
    </form>

    <form method="post" action="property/update/<%= property.id %>">
      <input type="submit" id="update" value="update">
    </form>

    <% end %>
  </div>

</body>
</html>
