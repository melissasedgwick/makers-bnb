<html>
<head>
  <title>Makers BnB by Team LAMP</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
  <link rel="icon" type="image/png" href="https://makers.tech/wp-content/themes/wp-makers-2018/favicon.ico" />
  <style>
    .right {
      float: right;
    }

    .property-list {
      text-align: center;
    }

    .properties {
      margin-top: 20px;
      margin-bottom: 20px;
      margin-left: 200px;
      margin-right: 200px;
      border: 2px dotted white;
    }

    .property-name {
      font-size: 40px;
    }

    .property-price {
      font-size: 20px;
    }

    body {
      background-image: url("image.png");
      background-size: cover;
    }

    .button {
      width: 100px;
      height: 25px;
      background-color: white;
      color: blue;
      margin: 8px 0;
      border: none;
      border-radius: 4px;
    }

    .header-button {
      width: 200px;
      height: 50px;
      background-color: white;
      color: blue;
      margin: 8px 0;
      border: none;
      border-radius: 4px;
      font-size: 25px;
    }

    .row {
      padding: 50px;
    }

    h1 {
      font-size: 65px;
    }
  </style>
</head>
<body>
  <form method="post" action="/update/<%= @property.id %>">
    <input type="text" name="name" value="<%= @property.name %>" />
    <input type="text" name="description" value="<%= @property.description %>" />
    <input type="value" name="ppn" value="<%= @property.ppn %>" />
    <input type="submit" class="button" value="save" />
  </form>
  <form method="post" action="/add-availability/<%= @property.id %>">
  <input type='text' name='day' placeholder='Date'><br><br>
<select name="months">
  <option value="january" name='jan'>January</option>
  <option value="february" name='feb'>February</option>
  <option value="march" name='mar'>March</option>
  <option value="april" name='apr'>April</option>
  <option value="may" name='may'>May</option>
  <option value="june" name='jun'>June</option>
  <option value="july" name='jul'>July</option>
  <option value="august" name='aug'>August</option>
  <option value="september" name='sep'>September</option>
  <option value="october" name='oct'>October</option>
  <option value="november" name='nov'>November</option>
  <option value="december" name='dec'>December</option>
</select>
<input type='text' name='year' placeholder='Year'><br><br>
<input type="hidden" value="<%= @property.id %>" name="id" />
<input type='submit' id="<%= @property_id %>" value='add'>
</form>

</body>
</html>
